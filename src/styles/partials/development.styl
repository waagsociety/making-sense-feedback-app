.sensors__overview
  width: 80vw
  margin auto
  display flex
  justify-content space-between
  align-items flex-start
  flex-wrap wrap
.signal
  background green
  display inline-block
  width 5vw
  height 5vw
  top 1vw
  margin-right 1vw
  border 3px solid #f2f2f2
  border-radius 50%
  &--working
    background #4BD748
.app__header
  text-align center
  padding 15vw 0 5vw
  font-size 3vw

.app__footer
  display flex
  justify-content center
  align-items center
  padding-top 6vw
  font-size 4vw
  opacity .8

.sensor
  text-align center
  width 40vw
  margin 10vw 0
  h3
    font-size 5vw
    font-weight 200

.sensor__value
  margin auto
  margin 0 auto 2vw auto
  height 30vw
  width 30vw
  border 6px solid darkGrey
  display block
  border-radius 50%
  font-size 6vw
  display flex
  justify-content center
  align-items center
